&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME ./BASIS_OPT
    POTENTIAL_FILE_NAME ./POTENTIAL
    &PRINT
      &BASIS_MOLOPT_QUANTITIES
      &END BASIS_MOLOPT_QUANTITIES
    &END
    &MGRID
      CUTOFF 300
      REL_CUTOFF 50
    &END MGRID
    &QS
      METHOD GAPW
      EPS_DEFAULT 1.0E-12
      EPS_PGF_ORB 1.0E-16
   EPS_FILTER_MATRIX 0.0e0
    &END QS
    &SCF
      EPS_SCF 1.0E-7
      MAX_SCF 10
      SCF_GUESS ATOMIC
      &OT
         PRECONDITIONER FULL_ALL
      &END
      &OUTER_SCF
         EPS_SCF 1.0E-7
         MAX_SCF 10
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL 
        &BECKE88
        &END
      &END XC_FUNCTIONAL
    &END
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.084 4.084 4.084
    &END CELL
    &COORD
Li 0.0 0.0 0.0
Li 2.042 2.042 0.0
Li 2.042 0.0 2.042
Li 0.0 2.042 2.042
H 0.0 2.042 0.0
H 2.042 0.0 0.0
H 0.0 0.0 2.042
H 2.042 2.042 2.042
    &END COORD
    &KIND H
      BASIS_SET OPT2
      POTENTIAL ALL
    &END KIND
    &KIND Li
      BASIS_SET OPT2
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT     LiH_bulk_3
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY
  FLUSH_SHOULD_FLUSH
&END GLOBAL
